# testar el programa twttr

from twttr import shorten

def main():
    shorten_test()

def test_shorten():
    assert shorten("twiter") == "twtr"
    assert shorten("GAT") == "GT"
    assert shorten("AEio") == ""


if __name__ == "__main__":
    main()
